@model IEnumerable<PhuTungXeMay2019.Models.Sanpham>

@{
    ViewBag.Title = "Index";
}

<h2>Quản Lí Sản Phẩm</h2>

<p>
    @Html.ActionLink("Thêm sản phẩm mới", "Create")
    @using (Html.BeginForm())
    {
    <p>
        @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />
    </p>
    }
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Loại sản phẩm
        </th>
        <th>
           Giá tiền
        </th>
        <th>
           Số lượng
        </th>
        <th>
            Xuất xứ
        </th>
        <th>
            Chi tiết sản phẩm
        </th>
        <th>
            Nhà sản xuất
        </th>
        <th>
            Nhà cung cấp
        </th>
        <th>
            Hình ảnh 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Tensp
        </td>
        <td>
            @item.Loaisp
        </td>
        <td>
            @item.Gia.ToString("n0")
        </td>
        <td>
            @item.Soluong.ToString()
        </td>
        <td>
            @item.Xuatxu
        </td>
        <td>
            @item.Chitietsp
        </td>
        <td>
            @item.Nhasx
        </td>
        <td>
            @item.Nhacungcap
        </td>
        <td>
            <img src="@Url.Action("Image", new { id = item.id})" />
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.id })">Sửa</a> |
            <a href="@Url.Action("Details", new { id = item.id })">Xem</a> |
            <a href="@Url.Action("Delete", new { id = item.id })">Xóa</a> |
            <a href="@Url.Action("Create", "Cart", new { id = item.id })">Mua</a>
        </td>
    </tr>
}

</table>
