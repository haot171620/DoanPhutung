@using PhuTungXeMay2019.Models;
@model List<Cart1>
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View1</h2>




<table class="table table-bordered">
    <tr>
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Tổng Cộng
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <mark>@item.tenSp</mark>
            </td>
            <td>
                <img src="@Url.Action("Image", new { id = item.idSp })" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dongia)
            </td>
            <td>
                @item.soluong
            <td>
                @item.thanhTien.ToString()
            </td>

            <td>
                @Html.ActionLink("Chỉnh sửa ", "Edit", new { id = item.idSp }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.idSp }) |
                <div>
                    @Html.ActionLink("Xóa", "Delete", new { id = item.idSp })

                </div>

            </td>
        </tr>
    }

</table>
