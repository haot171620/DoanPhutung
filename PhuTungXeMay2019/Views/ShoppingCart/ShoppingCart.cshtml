@using PhuTungXeMay2019.Models;
@model List<Cart1>
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View1</h2>

<p>
    @foreach (var item in Model)
    {
        @item.loaiSp
        <br />
        @item.tenSp
                <br />
        @item.dongia    <br />
        @item.soluong    <br />
        @item.thanhTien    <br />

    }
</p>
<div class="container">
    <div id="content">


        <!-- Cart Collaterals -->
       
            <a href="@Url.Action("Create","DonHang")">
                <input type="submit" value="Tiến hành đặt hàng" />
            </a>
      
        <div class="cart-collaterals">
            <div class="cart-totals pull-right">

                <div class="cart-totals-row"><h5 class="cart-total-title">Tổng giỏ hàng</h5></div>
                
                <div class="cart-totals-row"><span>Phí Ship:</span> <span>Miễn phí</span></div>
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- End of Cart Collaterals -->
        <div class="clearfix"></div>
    </div> <!-- #content -->
</div> <!-- .container -->