@model IEnumerable<PhuTungXeMay2019.Models.CONTACT>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<body>
    <div class="slide_content_wrap">
        <h4 class="title">VIEW CONTACT</h4>
        <p class="description">QUẢN LÝ CONTACT</p>
    </div>
   
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tenContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.noidungContact)
            </th>
            
           
            
            <th>
                @Html.DisplayNameFor(model => model.tenNguoidung)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.sdt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ghichu)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenContact)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.noidungContact)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.tenNguoidung)
            </td>
            
            
            <td>
                @Html.DisplayFor(modelItem => item.sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ghichu)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id=item.idContact }) |
                @Html.ActionLink("Xem", "Details", new { id=item.idContact }) |
                @Html.ActionLink("Xóa", "Delete", new { id=item.idContact })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
