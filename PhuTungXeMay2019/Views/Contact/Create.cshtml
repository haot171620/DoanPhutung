@model PhuTungXeMay2019.Models.CONTACT

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>CONTACT</h4>
            <hr />
            @Html.ValidationSummary(true)
    
            <div class="form-group">
                @Html.LabelFor(model => model.tenContact, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenContact)
                    @Html.ValidationMessageFor(model => model.tenContact)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.noidungContact, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.noidungContact)
                    @Html.ValidationMessageFor(model => model.noidungContact)
                </div>
            </div>
    
            
    
            <div class="form-group ">
                @Html.LabelFor(model => model.tenNguoidung, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenNguoidung)
                    @Html.ValidationMessageFor(model => model.tenNguoidung)
                </div>
            </div>
                
            <div class="form-group">
                @Html.LabelFor(model => model.gioitinh, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.gioitinh)
                    @Html.ValidationMessageFor(model => model.gioitinh)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.diachi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.diachi)
                    @Html.ValidationMessageFor(model => model.diachi)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.sdt, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.sdt)
                    @Html.ValidationMessageFor(model => model.sdt)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.ghichu, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ghichu)
                    @Html.ValidationMessageFor(model => model.ghichu)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Hiện List Contact", "Index")
    </div>
</body>
</html>
