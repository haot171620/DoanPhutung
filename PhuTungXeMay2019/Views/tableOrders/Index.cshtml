@model IEnumerable<PhuTungXeMay2019.Models.tableOrder>

@{
    ViewBag.Title = "Giỏ Hàng";
}

<h2>Thông tin giỏ hàng </h2>


<table class="table table-bordered">
    <tr>
        <th>
            Tên Sản Phẩm 
        </th>
        <th>
            Hình ảnh 
        </th>
        <th>
           Giá tiền
        </th>
        <th>
           Số Lượng
        </th>
        <th>
           Tổng Cộng
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <mark>@item.tenSP</mark>
        </td>
        <td>
            @item.hinhSP
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dongiaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soluongSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.thanhtien)
        </td>
        <td>
           @item.ghichu.
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa ", "Edit", new { id=item.idSP }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.idSP }) |
            <div>
                @Html.ActionLink("Xóa", "Delete", new { id = item.idSP })
          
            </div>
            
        </td>
    </tr>
}

</table>
